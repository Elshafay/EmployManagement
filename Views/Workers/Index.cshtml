@model IEnumerable<WorkersViewModel>

@{
    ViewData["Title"] = "Index";
}
<h1>All Workers</h1>
<br />
<a asp-action="Create" class="btn btn-primary">Create New Worker</a>
<br />
<br />
<form class="my-3" asp-action="Index" asp-controller="Workers" enctype="multipart/form-data">
    <div class="row">
        <div class="col-sm-8">
            <input placeholder="Search By Name" name="SearchValue" class="form-control" />
        </div>
        <div class="col-sm-4">
            <input type="submit" value="Search" class="btn btn-success btn-block" />
        </div>
    </div>
    </form>

@if (Model?.Count() > 0)

{

    <table class="table table-stripped table-hover">
        
        <thead>

            <tr>

                <th>@Html.DisplayNameFor(M => M.Name)</th>
                <th>@Html.DisplayNameFor(M => M.Images)</th>
                <th>@Html.DisplayNameFor(M => M.Address)</th>
                <th>@Html.DisplayNameFor(M => M.Email)</th>
                <th>@Html.DisplayNameFor(M => M.Salary)</th>
                <th>@Html.DisplayNameFor(M => M.HireDate)</th>
                @*<th>@Html. DisplayNameFor (M => M.IsActive)</th>
               <th>@Html.DisplayNameFor (M => M.DateOfCreation)</th>*@
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    @*Html.DisplayFor() will render the Display Template that matches the property's type.*@
                    <td>@Html.DisplayFor(m => item.Name)</td>
                    <td>
                        <img src="@item.ImagesUrl" class="img-circle" height="40" width="40" alt=" Worker Image" />
                    </td>
                    <td>@Html.DisplayFor(m => item.Address)</td>
                    <td>@Html.DisplayFor(m => item.Email)</td>
                    <td>@Html.DisplayFor(m => item.Salary)</td>
                    <td>
                        @Html.DisplayFor(m => item.HireDate.Day)-@Html.DisplayFor(m => item.HireDate.Month)
                        -@Html.DisplayFor(m => item.HireDate.Year)
                    </td>
                    @*<td>@Html. DisplayFor(m => item.IsActive)</td>
                     <td>@Html.DisplayFor(m => item.DateOfCreation)</td>*@
                    <td>
                        @*<partial name="_Buttons PartialView" model="item.Id.ToString()" />*@
                        <a class="btn btn-success" asp-action="Details" asp-route-id="@item.Id">
                            <i class="fas fa-eye"></i> Details
                        </a>
                    </td>

                    <td>
                        <a class="btn btn-warning" asp-action="Update" asp-route-id="@item.Id">
                            <i class="fas fa-edit"></i> Update

                        </a>
                    </td>

                    <td>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                            <i class="fas fa-trash"></i> Delete

                        </a>
                    </td>

                </tr>

            }
        </tbody>
    </table>
}

else

{
    <div class="alert alert-warning">

        <h4>No Workers Found!!</h4>

    </div>
}




