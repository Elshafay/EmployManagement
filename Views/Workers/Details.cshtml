@model WorkersViewModel
@{
    ViewData["Titel"] = "Detalis";
}
<h1>Worker Detalis</h1>
<br />
<br />
<div class="row">
    <div class="col-12">

        <form asp-action="Detalis" asp-controller="Workers">
            <div class="form-group">
                <label asp-for="@Model.Id" class="col-form-label"></label>
                <input asp-for="@Model.Id" class="form-control" readonly />

            </div>

            <div class="form-group">
                <label asp-for="@Model.Name" class="col-form-label"></label>
                <input asp-for="@Model.Name" class="form-control" readonly />

            </div>
            
            <div class="form-group">
                <label asp-for="@Model.Address" class="col-form-label"></label>
                <input asp-for="@Model.Address" class="form-control" readonly />

            </div>

            <div class="form-group">
                <label asp-for="@Model.Email" class="col-form-label"></label>
                <input asp-for="@Model.Email" class="form-control" readonly />

            </div> 

            <div class="form-group">
                <label asp-for="@Model.Salary" class="col-form-label"></label>
                <input asp-for="@Model.Salary" class="form-control" readonly />

            </div> 

            

            <div class="form-group">
                <label asp-for="@Model.HireDate" class="col-form-label"></label>
                <input asp-for="@Model.HireDate" class="form-control" readonly />

            </div> 
          

            <div class="form-group">
                <label asp-for="@Model.DepartmentId" class="col-form-label"></label>
                <input asp-for="@Model.DepartmentId" class="form-control" readonly />

            </div>

            <div class="form-group">
                <label asp-for="@Model.Images" class="col-form-label"></label>
                <input asp-for="@Model.Images" class="form-control" readonly />

            </div>

            <div class="form-group">
                <label asp-for="@Model.IsActive" class="col-form-label"></label>
                <input asp-for="@Model.IsActive" class="form-control" readonly />

            </div>

            <br />
            <a class="btn btn-success" asp-action="Update" asp-route-id="@Model.Id"> Update </a>
            <a asp-action="Index" class="btn btn-light"> Back To List </a>
       </form>

    </div>

</div>